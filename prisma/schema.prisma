generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum MemberRole {
  ADMIN
  MEMBER
  VIEWER
}

enum BoardRole {
  ADMIN
  MEMBER
  VIEWER
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
  TRIALING
}

enum PlanInterval {
  MONTHLY
  YEARLY
}

enum InvitationType {
  ORGANIZATION
  BOARD
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  IN_REVIEW
  DONE
  BLOCKED
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

enum AutomationTrigger {
  TASK_CREATED
  TASK_UPDATED
  TASK_STATUS_CHANGED
  TASK_ASSIGNED
  SPRINT_STARTED
  SPRINT_ENDED
  DEADLINE_APPROACHING
}

enum AutomationAction {
  ASSIGN_TASK
  CHANGE_STATUS
  SEND_NOTIFICATION
  CREATE_SUBTASK
  ADD_COMMENT
}

model User {
  id                            String    @id @default(cuid())
  email                         String    @unique
  password                      String // bcrypt hashed
  name                          String?
  githubUsername                String? // GitHub username for assignee syncing
  emailVerified                 Boolean   @default(false)
  emailVerificationToken        String?   @unique
  emailVerificationTokenExpires DateTime?
  passwordResetToken            String?   @unique
  passwordResetTokenExpires     DateTime?
  createdAt                     DateTime  @default(now())
  updatedAt                     DateTime  @updatedAt

  members          Member[]
  comments         Comment[]
  attachments      Attachment[]
  reminders        Reminder[]
  invitations      Invitation[]
  taskWatchers     TaskWatcher[]
  timeEntries      TimeEntry[]
  activities       Activity[]
  notifications    Notification[]
  auditLogs        AuditLog[]
  approvalRequests TaskApproval[] @relation("ApprovalRequester")
  approvals        TaskApproval[] @relation("ApprovalApprover")

  @@index([email])
}

model Organization {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  teams         Team[]
  members       Member[]
  boards        Board[]
  subscriptions Subscription[]
  usage         Usage[]
  invitations   Invitation[]
  activities    Activity[]
  tags          Tag[]
  taskTemplates TaskTemplate[]
  settings      OrganizationSettings?
  integrations  Integration[]
  customRoles   CustomRole[]
  auditLogs     AuditLog[]

  @@index([slug])
}

model Team {
  id             String   @id @default(cuid())
  name           String
  organizationId String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  members      Member[]
  boards       Board[]

  @@index([organizationId])
}

model Member {
  id             String     @id @default(cuid())
  userId         String
  organizationId String
  teamId         String?
  role           MemberRole @default(MEMBER)
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt

  organization   Organization    @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  team           Team?           @relation(fields: [teamId], references: [id], onDelete: SetNull)
  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  assignedTasks  Task[]          @relation("TaskAssignee")
  recurringTasks RecurringTask[] @relation("RecurringTaskAssignee")
  boardMembers   BoardMember[]
  customRole     CustomRole?     @relation(fields: [customRoleId], references: [id], onDelete: SetNull)
  customRoleId   String?

  @@unique([userId, organizationId])
  @@index([userId])
  @@index([organizationId])
  @@index([teamId])
}

model Board {
  id                String   @id @default(cuid())
  name              String
  description       String?
  organizationId    String
  teamId            String?
  githubRepoId      String?
  githubRepoName    String?
  githubProjectId   Int?
  githubAccessToken String? // Encrypted OAuth token
  githubSyncEnabled Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  organization   Organization       @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  team           Team?              @relation(fields: [teamId], references: [id], onDelete: SetNull)
  sprints        Sprint[]
  tasks          Task[]
  statuses       TaskStatusColumn[]
  boardMembers   BoardMember[]
  invitations    Invitation[]
  tags           Tag[]
  activities     Activity[]
  taskTemplates  TaskTemplate[]
  recurringTasks RecurringTask[]
  archived       Boolean            @default(false)
  archivedAt     DateTime?
  customFields   CustomField[]
  auditLogs      AuditLog[]

  @@index([organizationId])
  @@index([teamId])
}

model TaskStatusColumn {
  id        String     @id @default(cuid())
  boardId   String
  name      String
  status    TaskStatus
  order     Int
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  board Board  @relation(fields: [boardId], references: [id], onDelete: Cascade)
  tasks Task[]

  @@unique([boardId, status])
  @@index([boardId])
  @@index([status])
}

model Sprint {
  id            String   @id @default(cuid())
  name          String
  description   String?
  boardId       String
  startDate     DateTime
  endDate       DateTime
  goal          String?
  capacityHours Float? // Maximum hours capacity for the sprint
  isActive      Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  board Board  @relation(fields: [boardId], references: [id], onDelete: Cascade)
  tasks Task[]

  @@index([boardId])
  @@index([isActive])
}

model Task {
  id                String       @id @default(cuid())
  title             String
  description       String?
  boardId           String
  sprintId          String?
  status            TaskStatus   @default(TODO)
  priority          TaskPriority @default(MEDIUM)
  assigneeId        String?
  statusColumnId    String?
  dueDate           DateTime?
  estimatedHours    Float?
  actualHours       Float?
  order             Int          @default(0)
  version           Int          @default(1) // For optimistic locking
  githubIssueNumber Int? // GitHub issue number for bidirectional sync
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt

  board           Board             @relation(fields: [boardId], references: [id], onDelete: Cascade)
  sprint          Sprint?           @relation(fields: [sprintId], references: [id], onDelete: SetNull)
  assignee        Member?           @relation("TaskAssignee", fields: [assigneeId], references: [id], onDelete: SetNull)
  statusColumn    TaskStatusColumn? @relation(fields: [statusColumnId], references: [id], onDelete: SetNull)
  comments        Comment[]
  attachments     Attachment[]
  reminders       Reminder[]
  parentTask      Task?             @relation("TaskSubtasks", fields: [parentTaskId], references: [id], onDelete: Cascade)
  parentTaskId    String?
  subtasks        Task[]            @relation("TaskSubtasks")
  dependencies    TaskDependency[]  @relation("TaskDependencies")
  dependsOn       TaskDependency[]  @relation("DependsOn")
  tags            TaskTag[]
  checklistItems  ChecklistItem[]
  timeEntries     TimeEntry[]
  activities      Activity[]
  taskWatchers    TaskWatcher[]
  customFields    TaskCustomField[]
  auditLogs       AuditLog[]
  recurringTask   RecurringTask?    @relation(fields: [recurringTaskId], references: [id], onDelete: SetNull)
  recurringTaskId String?
  taskApprovals   TaskApproval[]

  @@index([boardId])
  @@index([sprintId])
  @@index([assigneeId])
  @@index([status])
  @@index([statusColumnId])
  @@index([parentTaskId])
}

model Comment {
  id        String   @id @default(cuid())
  taskId    String
  userId    String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([taskId])
  @@index([userId])
}

model Attachment {
  id           String    @id @default(cuid())
  taskId       String
  fileName     String
  filePath     String // Path in storage service
  fileSize     Int
  mimeType     String
  signedUrl    String? // Temporary signed URL
  urlExpiresAt DateTime? // When signed URL expires
  uploadedBy   String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user User @relation(fields: [uploadedBy], references: [id], onDelete: Cascade)

  @@index([taskId])
}

model AutomationRule {
  id             String            @id @default(cuid())
  organizationId String
  name           String
  description    String?
  trigger        AutomationTrigger
  conditions     Json? // Flexible conditions in JSON
  action         AutomationAction
  actionParams   Json? // Action parameters in JSON
  isActive       Boolean           @default(true)
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt

  @@index([organizationId])
  @@index([isActive])
}

model Reminder {
  id        String   @id @default(cuid())
  taskId    String
  userId    String
  remindAt  DateTime
  message   String?
  isSent    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([taskId])
  @@index([userId])
  @@index([remindAt, isSent])
}

model BoardMember {
  id        String    @id @default(cuid())
  boardId   String
  memberId  String
  role      BoardRole @default(VIEWER)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  board  Board  @relation(fields: [boardId], references: [id], onDelete: Cascade)
  member Member @relation(fields: [memberId], references: [id], onDelete: Cascade)

  @@unique([boardId, memberId])
  @@index([boardId])
  @@index([memberId])
}

model Plan {
  id            String       @id @default(cuid())
  name          String
  stripePriceId String?      @unique
  price         Decimal
  interval      PlanInterval
  maxBoards     Int
  maxMembers    Int
  maxTasks      Int?
  features      Json? // Feature flags
  isActive      Boolean      @default(true)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  subscriptions Subscription[]

  @@index([isActive])
}

model Subscription {
  id                   String             @id @default(cuid())
  organizationId       String             @unique
  planId               String
  stripeCustomerId     String?            @unique
  stripeSubscriptionId String?            @unique
  status               SubscriptionStatus @default(ACTIVE)
  currentPeriodStart   DateTime?
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean            @default(false)
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  plan         Plan         @relation(fields: [planId], references: [id])

  @@index([organizationId])
  @@index([status])
}

model Usage {
  id             String   @id @default(cuid())
  organizationId String
  metric         String // "boards", "members", "tasks", etc.
  count          Int      @default(0)
  period         String // "2024-01" for monthly
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, metric, period])
  @@index([organizationId])
}

model Invitation {
  id             String         @id @default(cuid())
  type           InvitationType
  email          String
  token          String         @unique
  organizationId String?
  boardId        String?
  role           MemberRole     @default(MEMBER)
  invitedBy      String
  expiresAt      DateTime
  acceptedAt     DateTime?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  organization Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  board        Board?        @relation(fields: [boardId], references: [id], onDelete: Cascade)
  inviter      User          @relation(fields: [invitedBy], references: [id], onDelete: Cascade)

  @@index([email])
  @@index([token])
  @@index([organizationId])
  @@index([boardId])
  @@index([expiresAt])
}

model TaskDependency {
  id          String   @id @default(cuid())
  taskId      String
  dependsOnId String
  type        String   @default("BLOCKS") // BLOCKS, RELATED, DUPLICATE
  createdAt   DateTime @default(now())

  task      Task @relation("TaskDependencies", fields: [taskId], references: [id], onDelete: Cascade)
  dependsOn Task @relation("DependsOn", fields: [dependsOnId], references: [id], onDelete: Cascade)

  @@unique([taskId, dependsOnId])
  @@index([taskId])
  @@index([dependsOnId])
}

model Tag {
  id             String   @id @default(cuid())
  name           String
  color          String   @default("#3B82F6")
  organizationId String?
  boardId        String?
  createdAt      DateTime @default(now())

  organization Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  board        Board?        @relation(fields: [boardId], references: [id], onDelete: Cascade)
  taskTags     TaskTag[]

  @@index([organizationId])
  @@index([boardId])
  @@index([name, organizationId])
  @@index([name, boardId])
}

model TaskTag {
  id        String   @id @default(cuid())
  taskId    String
  tagId     String
  createdAt DateTime @default(now())

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([taskId, tagId])
  @@index([taskId])
  @@index([tagId])
}

model ChecklistItem {
  id          String   @id @default(cuid())
  taskId      String
  text        String
  isCompleted Boolean  @default(false)
  order       Int
  createdAt   DateTime @default(now())

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([taskId])
}

model TaskWatcher {
  id        String   @id @default(cuid())
  taskId    String
  userId    String
  createdAt DateTime @default(now())

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([taskId, userId])
  @@index([taskId])
  @@index([userId])
}

model TimeEntry {
  id          String    @id @default(cuid())
  taskId      String
  userId      String
  description String?
  startTime   DateTime
  endTime     DateTime?
  duration    Int? // in seconds
  billable    Boolean   @default(false)
  createdAt   DateTime  @default(now())

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([taskId])
  @@index([userId])
  @@index([startTime])
}

model Activity {
  id             String   @id @default(cuid())
  type           String // TASK_CREATED, TASK_UPDATED, COMMENT_ADDED, etc.
  organizationId String?
  boardId        String?
  taskId         String?
  userId         String
  metadata       Json?
  createdAt      DateTime @default(now())

  organization Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  board        Board?        @relation(fields: [boardId], references: [id], onDelete: Cascade)
  task         Task?         @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([boardId])
  @@index([taskId])
  @@index([userId])
  @@index([createdAt])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String
  title     String
  message   String
  link      String?
  read      Boolean  @default(false)
  metadata  Json?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, read])
  @@index([createdAt])
}

model TaskTemplate {
  id              String       @id @default(cuid())
  name            String
  description     String?
  organizationId  String?
  boardId         String?
  title           String
  taskDescription String?
  priority        TaskPriority
  estimatedHours  Float?
  checklistItems  Json? // Array of checklist items
  tags            String[] // Tag names
  createdAt       DateTime     @default(now())

  organization Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  board        Board?        @relation(fields: [boardId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([boardId])
}

enum RecurrencePattern {
  DAILY
  WEEKLY
  MONTHLY
  YEARLY
  CUSTOM
}

model RecurringTask {
  id             String            @id @default(cuid())
  boardId        String
  title          String
  description    String?
  priority       TaskPriority      @default(MEDIUM)
  assigneeId     String?
  estimatedHours Float?
  pattern        RecurrencePattern
  interval       Int               @default(1) // Every N days/weeks/months
  dayOfWeek      Int? // 0-6 for weekly (0 = Sunday)
  dayOfMonth     Int? // 1-31 for monthly
  monthOfYear    Int? // 0-11 for yearly
  startDate      DateTime
  endDate        DateTime? // Optional end date
  nextOccurrence DateTime // When to create the next task
  isActive       Boolean           @default(true)
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt

  board    Board   @relation(fields: [boardId], references: [id], onDelete: Cascade)
  assignee Member? @relation("RecurringTaskAssignee", fields: [assigneeId], references: [id], onDelete: SetNull)
  tasks    Task[]

  @@index([boardId])
  @@index([nextOccurrence])
  @@index([isActive])
}

model TaskApproval {
  id          String         @id @default(cuid())
  taskId      String
  requestedBy String
  approvedBy  String?
  status      ApprovalStatus @default(PENDING)
  comment     String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  task      Task  @relation(fields: [taskId], references: [id], onDelete: Cascade)
  requester User  @relation("ApprovalRequester", fields: [requestedBy], references: [id], onDelete: Cascade)
  approver  User? @relation("ApprovalApprover", fields: [approvedBy], references: [id], onDelete: SetNull)

  @@index([taskId])
  @@index([status])
}

enum CustomFieldType {
  TEXT
  NUMBER
  DATE
  DROPDOWN
  CHECKBOX
  URL
}

model CustomField {
  id        String          @id @default(cuid())
  boardId   String
  name      String
  type      CustomFieldType
  required  Boolean         @default(false)
  options   Json? // For DROPDOWN type
  order     Int
  isVisible Boolean         @default(true)
  createdAt DateTime        @default(now())

  board      Board             @relation(fields: [boardId], references: [id], onDelete: Cascade)
  taskFields TaskCustomField[]

  @@index([boardId])
}

model TaskCustomField {
  id            String   @id @default(cuid())
  taskId        String
  customFieldId String
  value         Json // Flexible value storage
  createdAt     DateTime @default(now())

  task        Task        @relation(fields: [taskId], references: [id], onDelete: Cascade)
  customField CustomField @relation(fields: [customFieldId], references: [id], onDelete: Cascade)

  @@unique([taskId, customFieldId])
  @@index([taskId])
  @@index([customFieldId])
}

model OrganizationSettings {
  id             String   @id @default(cuid())
  organizationId String   @unique
  logoUrl        String?
  primaryColor   String?
  secondaryColor String?
  customDomain   String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
}

enum IntegrationProvider {
  SLACK
  JIRA
  LINEAR
  ZAPIER
  MICROSOFT_TEAMS
}

model Integration {
  id             String              @id @default(cuid())
  organizationId String
  provider       IntegrationProvider
  config         Json // Provider-specific configuration
  isActive       Boolean             @default(true)
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, provider])
  @@index([organizationId])
}

model CustomRole {
  id             String   @id @default(cuid())
  organizationId String
  name           String
  permissions    Json // Permission flags
  createdAt      DateTime @default(now())

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  members      Member[]

  @@unique([organizationId, name])
  @@index([organizationId])
}

model AuditLog {
  id             String   @id @default(cuid())
  organizationId String?
  boardId        String?
  taskId         String?
  userId         String
  action         String // CREATE, UPDATE, DELETE, etc.
  entityType     String // TASK, BOARD, MEMBER, etc.
  entityId       String
  changes        Json? // Before/after values
  ipAddress      String?
  userAgent      String?
  createdAt      DateTime @default(now())

  organization Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  board        Board?        @relation(fields: [boardId], references: [id], onDelete: Cascade)
  task         Task?         @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([boardId])
  @@index([taskId])
  @@index([userId])
  @@index([createdAt])
  @@index([entityType, entityId])
}
